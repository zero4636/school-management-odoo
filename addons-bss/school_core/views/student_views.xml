<odoo>
    <record id="view_school_student_list" model="ir.ui.view">
        <field name="name">school.student.list</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="student_id"/>
                <field name="dob"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_school_student_form" model="ir.ui.view">
        <field name="name">school.student.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="student_id" invisible="1"/>
                        <field name="dob"/>
                        <field name="age" readonly="1"/>
                        <field name="gender"/>
                        <field name="user_id"/>
                        <field name="active"/>
                    </group>
                    <notebook>
                        <page string="Enrollments">
                            <field name="enrollment_ids">
                                <list>
                                    <field name="subject_id"/>
                                    <field name="enrollment_date"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_students" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_school_students_action"
              name="Students"
              parent="menu_school_students"
              action="action_school_students"
              groups="school_core.group_school_admin,school_core.group_school_student"/>
    />
</odoo>
