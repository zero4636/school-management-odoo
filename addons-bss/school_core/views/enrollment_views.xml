<odoo>
    <record id="view_school_enrollment_list" model="ir.ui.view">
        <field name="name">school.enrollment.list</field>
        <field name="model">school.enrollment</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="student_id"/>
                <field name="subject_id"/>
                <field name="enrollment_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_school_enrollment_form" model="ir.ui.view">
        <field name="name">school.enrollment.form</field>
        <field name="model">school.enrollment</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="subject_id"/>
                        <field name="enrollment_date"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_enrollments" model="ir.actions.act_window">
        <field name="name">Enrollments</field>
        <field name="res_model">school.enrollment</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_school_enrollments_action"
              name="Enrollments"
              parent="menu_school_enrollments"
              action="action_school_enrollments"/>
</odoo>
