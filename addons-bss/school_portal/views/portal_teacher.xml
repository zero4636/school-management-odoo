<odoo>
    <template id="portal_teacher_page" name="Portal Teacher Page">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs"><li>Teacher</li></t>
            <div class="container">
                <h3>Hello <t t-esc="teacher.name"/></h3>
                <p>Subjects:</p>
                <ul>
                    <t t-foreach="teacher.subject_ids" t-as="subj">
                        <li>
                            <b><t t-esc="subj.name"/></b>
                            (<t t-esc="len(subj.enrollment_ids)"/> students)
                        </li>
                    </t>
                </ul>
            </div>
        </t>
    </template>
</odoo>
